<div class="container">
        <form action="/waiters/{{this.name}}" method="POST">
                <div class="content">

                        <p>Hello, {{this.name}} please select days you can work from the options provided below</p>


                        <div class="boxes">


                                {{#each day}}
                                <input type="checkbox" class="dayCheck" name="days" value="{{this.id}}" {{this.state}}>
                                <label class="days" for="all">{{this.day}}</label>
                                {{/each}}

                        </div>
                        <div class="error">
                                {{#if messages}}
                                {{messages.error}}
                                {{/if}}
                        </div>
                        <div class="success">
                                {{#if messages}}
                                {{messages.success}}
                                {{/if}}
                        </div>


                     
                        <div class="subtn">

                                <button type="submit">Submit</button>
                        </div>

        </form>
</div>

</div>


<script>
        var errors = document.querySelector(".error")

        setTimeout(function () {
                errors.innerHTML = ""
        }, 2000)

        var errors = document.querySelector(".success")

        setTimeout(function () {
                errors.innerHTML = ""
        }, 2000)
</script>